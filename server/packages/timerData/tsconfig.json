{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "preserveValueImports": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "ESNext",
        "useDefineForClassFields": true,
    },
    "include": [
        "src/*.d.ts",
        "src/*.ts",
        "src/*.js",
        "src/*.json",
    ],
    "exclude": [
        "jest.config.js",
        "node_modules/*",
        "dist/*",
    ],
}